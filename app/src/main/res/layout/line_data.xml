<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bleu1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">
        <com.stanly.ram.Widgets.AutoResizeTextView
            android:id="@+id/heure_depart"
            android:layout_width="85dp"

            android:layout_height="wrap_content"
            android:textColor="@color/black1"
            android:textStyle="bold"
            android:padding="4dp"

            android:gravity="center"
            android:text="Départ"/>
        <com.stanly.ram.Widgets.AutoResizeTextView
            android:id="@+id/heure_arrivee"
            android:padding="4dp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_width="85dp"

            android:textColor="@color/black1"
            android:layout_height="wrap_content"
            android:text="Arrivée"/>
        <com.stanly.ram.Widgets.AutoResizeTextView
            android:id="@+id/prix"
            android:padding="4dp"
            android:textStyle="bold"
            android:gravity="center"

            android:layout_width="80dp"
            android:textColor="@color/black1"
            android:layout_height="wrap_content"
            android:text="Prix"/>
        <LinearLayout
            android:layout_weight="1"

           android:gravity="center"
            android:textColor="@color/black1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:id="@+id/prem_car"
                android:layout_width="25dp"
                android:visibility="invisible"
                android:layout_height="25dp"
                android:src="@drawable/prem_ctm"
                android:tint="@color/bleuDarkCTM"/>
            <ImageView
                android:id="@+id/info"
android:visibility="gone"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/info_icon"
                android:tint="@color/bleuDarkCTM"/>
            </LinearLayout>
    </LinearLayout>
</LinearLayout>