<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >


    <RelativeLayout
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        >

        <android.support.v4.view.ViewPager
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"

        android:gravity="bottom|center"

        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/open_time"
                android:orientation="vertical"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_margin="2dp"
                android:background="@color/bleuDarkCTM"
                android:gravity="center"
                android:elevation="4dp">
                <com.stanly.ram.Widgets.ArrowImageView

                    android:layout_width="30dp"
                    android:layout_height="30dp"

                    android:layout_gravity="center"

                    android:tint="@color/white"
                    android:src="@drawable/clock"

                    />
                <com.stanly.ram.Widgets.AutoResizeTextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:ellipsize="marquee"
                    android:textStyle="bold"
                    android:layout_marginTop="2dp"
                    android:gravity="center"
                    android:text="Horaires"
                    android:maxLines="2"
                    android:textSize="18sp" />


            </LinearLayout>
            <LinearLayout
                android:id="@+id/open_services"
                android:layout_marginTop="4dp"
                android:orientation="vertical"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_margin="2dp"
                android:background="@color/white"
                android:gravity="center"
                android:elevation="4dp">
                <com.stanly.ram.Widgets.ArrowImageView

                    android:layout_width="30dp"
                    android:layout_height="30dp"

                    android:layout_gravity="center"

                    android:tint="@color/bleuDarkCTM"
                    android:src="@drawable/services"

                    />
                <com.stanly.ram.Widgets.AutoResizeTextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/bleuDarkCTM"
                    android:ellipsize="marquee"

                    android:gravity="center"
                    android:text="Services"
                    android:maxLines="2"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginTop="2dp"/>


            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/open_agenda"
                android:orientation="vertical"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_margin="2dp"

                android:background="@color/white"
                android:gravity="center"
                android:elevation="4dp">
                <com.stanly.ram.Widgets.ArrowImageView

                    android:layout_width="30dp"
                    android:layout_height="30dp"

                    android:layout_gravity="center"

                    android:tint="@color/bleuDarkCTM"
                    android:src="@drawable/agenda"

                    />
                <com.stanly.ram.Widgets.AutoResizeTextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/bleuDarkCTM"
                    android:ellipsize="marquee"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginTop="2dp"
                    android:gravity="center"
                    android:text="Agenda"
                    android:maxLines="2"
                    />


            </LinearLayout>
            <LinearLayout
                android:id="@+id/open_contact"
                android:orientation="vertical"
                android:layout_width="100dp"
                android:layout_margin="2dp"
                android:layout_height="80dp"

                android:background="@color/bleuDarkCTM"
                android:gravity="center"
                android:elevation="4dp">
                <com.stanly.ram.Widgets.ArrowImageView


                    android:layout_width="30dp"
                    android:layout_height="30dp"

                    android:layout_gravity="center"

                    android:tint="@color/white"
                    android:src="@drawable/tel"

                    />
                <com.stanly.ram.Widgets.AutoResizeTextView


                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:ellipsize="marquee"

                    android:gravity="center"
                    android:text="Contact"
                    android:maxLines="2"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginTop="2dp" />


            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>